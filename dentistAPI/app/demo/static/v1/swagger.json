{
  "info": {
    "version": "1.0.0", 
    "description": "Service to handle Dentist information for a dental clinic", 
    "title": "Dentist Information API"
  }, 
  "paths": {
    "/dentists/{id}": {
      "delete": {
        "tags": [
          "Appointments"
        ], 
        "summary": "Deletes information of a given dentist name", 
        "responses": {
          "200": {
            "description": "OK"
          }, 
          "400": {
            "description": "Invalid Name supplied"
          }, 
          "404": {
            "description": "Dentist not found"
          }
        }, 
        "parameters": [
          {
            "required": true, 
            "minimum": 1, 
            "type": "integer", 
            "name": "id", 
            "in": "path"
          }
        ], 
        "produces": [
          "application/json"
        ]
      }, 
      "get": {
        "tags": [
          "Appointments"
        ], 
        "summary": "Returns information of a given dentist name", 
        "responses": {
          "200": {
            "description": "OK"
          }, 
          "400": {
            "description": "Invalid ID supplied"
          }, 
          "404": {
            "description": "Dentist not found"
          }
        }, 
        "parameters": [
          {
            "required": true, 
            "minimum": 1, 
            "type": "integer", 
            "name": "id", 
            "in": "path"
          }
        ], 
        "produces": [
          "application/json"
        ]
      }
    }, 
    "/dentists": {
      "post": {
        "produces": [
          "application/json"
        ], 
        "summary": "Adds a dentist", 
        "responses": {
          "200": {
            "description": "OK"
          }, 
          "405": {
            "description": "Invalid input"
          }
        }, 
        "parameters": [
          {
            "schema": {
              "required": [
                "name", 
                "location", 
                "specialisation"
              ], 
              "type": "object", 
              "properties": {
                "specialisation": {
                  "type": "string"
                }, 
                "name": {
                  "type": "string"
                }, 
                "location": {
                  "type": "string"
                }
              }
            }, 
            "description": "The dentist to add", 
            "name": "dentist", 
            "in": "body"
          }
        ], 
        "tags": [
          "Appointments"
        ]
      }, 
      "get": {
        "produces": [
          "application/json"
        ], 
        "summary": "Returns a list of available dentists.", 
        "responses": {
          "200": {
            "description": "OK"
          }
        }, 
        "tags": [
          "Appointments"
        ]
      }
    }
  }, 
  "basePath": "/v1", 
  "swagger": "2.0"
}