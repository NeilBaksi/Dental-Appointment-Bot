{
  "info": {
    "version": "1.0.0", 
    "description": "Service to handle timeslot information and bookings for a dental clinic", 
    "title": "Timeslots Information and Booking API"
  }, 
  "paths": {
    "/timeslots/{dentistID}": {
      "post": {
        "tags": [
          "Timeslots"
        ], 
        "responses": {
          "200": {
            "description": "OK"
          }, 
          "409": {
            "description": "Timeslot already exists"
          }, 
          "400": {
            "description": "Invalid ID supplied"
          }
        }, 
        "parameters": [
          {
            "required": true, 
            "minimum": 1, 
            "type": "integer", 
            "name": "dentistID", 
            "in": "path"
          }, 
          {
            "schema": {
              "required": [
                "startTime"
              ], 
              "type": "object", 
              "properties": {
                "startTime": {
                  "type": "integer"
                }
              }
            }, 
            "description": "The timeslot to add", 
            "name": "timeslot", 
            "in": "body"
          }
        ], 
        "summary": "Adds a new timeslot for a given dentist ID"
      }, 
      "get": {
        "tags": [
          "Timeslots"
        ], 
        "summary": "Returns available timeslots of a given dentist ID", 
        "responses": {
          "200": {
            "description": "OK"
          }, 
          "404": {
            "description": "Timeslot not found"
          }, 
          "400": {
            "description": "Invalid ID supplied"
          }
        }, 
        "parameters": [
          {
            "required": true, 
            "minimum": 1, 
            "type": "integer", 
            "name": "dentistID", 
            "in": "path"
          }
        ], 
        "produces": [
          "application/json"
        ]
      }
    }, 
    "/timeslots": {
      "post": {
        "tags": [
          "Timeslots"
        ], 
        "responses": {
          "200": {
            "description": "OK"
          }, 
          "409": {
            "description": "Timeslot already exists"
          }, 
          "400": {
            "description": "Invalid ID supplied"
          }
        }, 
        "parameters": [
          {
            "schema": {
              "required": [
                "dentistID"
              ], 
              "type": "object", 
              "properties": {
                "dentistID": {
                  "type": "integer"
                }
              }
            }, 
            "description": "The dentist to add", 
            "name": "timeslot", 
            "in": "body"
          }
        ], 
        "summary": "Adds a new dentist with fresh timeslots"
      }, 
      "get": {
        "produces": [
          "application/json"
        ], 
        "summary": "Returns a list of available timeslots.", 
        "responses": {
          "200": {
            "description": "OK"
          }, 
          "404": {
            "description": "Not Found"
          }
        }, 
        "tags": [
          "Timeslots"
        ]
      }
    }, 
    "/timeslots/{dentistID}/{timeslotID}": {
      "get": {
        "description": "timeslotID is not the same as startTime. timeslotID gives the actual id of the booking from the start of the day e.g. appointment at 8 makes timeslotID 1 as it is the 1st booking of the day.", 
        "parameters": [
          {
            "required": true, 
            "minimum": 1, 
            "type": "integer", 
            "name": "dentistID", 
            "in": "path"
          }, 
          {
            "required": true, 
            "minimum": 1, 
            "type": "integer", 
            "name": "timeslotID", 
            "in": "path"
          }
        ], 
        "tags": [
          "Timeslots"
        ], 
        "produces": [
          "application/json"
        ], 
        "summary": "Returns timeslot information of a given timeslot ID", 
        "responses": {
          "200": {
            "description": "OK"
          }, 
          "404": {
            "description": "Timeslot not found"
          }, 
          "400": {
            "description": "Invalid ID supplied"
          }
        }
      }
    }, 
    "/timeslots/{dentistID}/{timeslotID}/cancel": {
      "put": {
        "produces": [
          "application/json"
        ], 
        "summary": "Cancel a timeslot of given timeslot ID for a given dentist ID", 
        "responses": {
          "200": {
            "description": "OK"
          }, 
          "404": {
            "description": "Timeslot not found"
          }, 
          "400": {
            "description": "Invalid ID supplied"
          }
        }, 
        "parameters": [
          {
            "description": "ID of the dentist to be booked", 
            "required": true, 
            "minimum": 1, 
            "in": "path", 
            "type": "integer", 
            "name": "dentistID"
          }, 
          {
            "description": "timeslotID of the time the dentist is to be booked", 
            "required": true, 
            "minimum": 1, 
            "in": "path", 
            "type": "integer", 
            "name": "timeslotID"
          }
        ], 
        "tags": [
          "Timeslots"
        ]
      }
    }, 
    "/timeslots/{dentistID}/{timeslotID}/reserve": {
      "put": {
        "produces": [
          "application/json"
        ], 
        "summary": "Reserves a timeslot of given timeslot ID for a given dentist ID", 
        "responses": {
          "200": {
            "description": "OK"
          }, 
          "404": {
            "description": "Timeslot not found"
          }, 
          "400": {
            "description": "Invalid ID supplied"
          }
        }, 
        "parameters": [
          {
            "description": "ID of the dentist to be booked", 
            "required": true, 
            "minimum": 1, 
            "in": "path", 
            "type": "integer", 
            "name": "dentistID"
          }, 
          {
            "description": "timeslotID of the time the dentist is to be booked", 
            "required": true, 
            "minimum": 1, 
            "in": "path", 
            "type": "integer", 
            "name": "timeslotID"
          }
        ], 
        "tags": [
          "Timeslots"
        ]
      }
    }
  }, 
  "basePath": "/v1", 
  "swagger": "2.0"
}